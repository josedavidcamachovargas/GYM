@model GYM.Models.PaymentType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <h1>Detalles</h1>
        <div class="card-body">
            <div>
                <h4>PaymentType</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PaymentDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Payment)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Payment)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PeriodOfTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PeriodOfTime)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PaymentMean)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentMean)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ExpirationDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ExpirationDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer.Name)
                    </dd>
                </dl>
            </div>
            <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success text-white" style="cursor:pointer">
                        Editar
                        <i class="fas fa-edit"></i>
                    </a>

                    <a asp-action="Index" class="btn btn-info text-white" style="cursor:pointer">
                        Regresar a lista
                        <i class="fas fa-user"></i>
                    </a>
            </div>
        </div>
    </div>
</div>
