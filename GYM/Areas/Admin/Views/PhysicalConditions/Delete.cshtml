@model GYM.Models.PhysicalCondition

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <h1>Eliminar</h1>
        <h3>¿Seguro que quieres eliminar esta condición física del cliente?</h3>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Weight)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Weight)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Height)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Height)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Diseases)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Diseases)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Medicines)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Medicines)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-info text-white" style="cursor:pointer">
                    Regresar a lista
                    <i class="fas fa-user"></i>
                </a>
            </form>
        </div>
    </div>
</div>
