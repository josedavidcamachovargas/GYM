@model GYM.Models.PhysicalCondition

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <h1>Detalles</h1>
        <div class="card-body">
            <div>
                <h4>Condición física</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Weight)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Weight)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Height)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Height)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Diseases)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Diseases)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Medicines)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Medicines)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer.Name)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success text-white" style="cursor:pointer">
                    Editar
                    <i class="fas fa-edit"></i>
                </a> |
                <a asp-action="Index" class="btn btn-info text-white" style="cursor:pointer">
                    Regresar a lista
                    <i class="fas fa-user"></i>
                </a>
            </div>
        </div>
    </div>
</div>
